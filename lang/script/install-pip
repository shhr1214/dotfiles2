#!/bin/bash

pip3 install --upgrade --user pip
pip3 install --user autoflake
pip3 install --user bashate
pip3 install --user black
pip3 install --user coverage
pip3 install --user cython
pip3 install --user epc
pip3 install --user flake8
pip3 install --user importmagic
pip3 install --user isort
pip3 install --user jupyter_contrib_nbextensions
pip3 install --user neovim
pip3 install --user ptvsd
pip3 install --user pyls-black
pip3 install --user pyls-isort
pip3 install --user pyls-mypy
pip3 install --user pynvim
pip3 install --user python-language-server
pip3 install --user scikit-learn
pip3 install --user yapf

jupyter contrib nbextension install --user

ln -fs "${HOME}/.dotfiles/lang/mypy"     "${XDG_CONFIG_HOME}/mypy"
ln -fs "${HOME}/.dotfiles/lang/pylintrc" "${XDG_CONFIG_HOME}/pylintrc"
